<Window
    x:Class="DataGridSampleTest.Avalonia.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DataGridSampleTest.Avalonia"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid RowDefinitions="auto, *">
        <Button
            Width="100"
            Height="30"
            HorizontalAlignment="Right"
            HorizontalContentAlignment="Center"
            Background="Gray"
            Command="{Binding RandomDataCommand}"
            Content="랜덤생성" />
        <DataGrid
            Grid.Row="1"
            BorderBrush="Gray"
            BorderThickness="1"
            CanUserReorderColumns="True"
            CanUserResizeColumns="True"
            CanUserSortColumns="False"
            GridLinesVisibility="All"
            HorizontalScrollBarVisibility="Auto"
            IsReadOnly="True"
            ItemsSource="{Binding Devices}"
            VerticalScrollBarVisibility="Auto">
            <DataGrid.Styles>
                <Style Selector="DataGridTextColumn">
                    <Setter Property="Foreground" Value="White" />
                </Style>
            </DataGrid.Styles>
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding DeviceId}"
                    Header="DeviceId" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text1}"
                    Header="Text1" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text2}"
                    Header="Text2" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text3}"
                    Header="Text3" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text4}"
                    Header="Text4" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text5}"
                    Header="Text5" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text6}"
                    Header="Text6" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text7}"
                    Header="Text7" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text8}"
                    Header="Text8" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text9}"
                    Header="Text9" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text10}"
                    Header="Text10" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text11}"
                    Header="Text11" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text12}"
                    Header="Text12" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text13}"
                    Header="Text13" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text14}"
                    Header="Text14" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text15}"
                    Header="Text15" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text16}"
                    Header="Text16" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text17}"
                    Header="Text17" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text18}"
                    Header="Text18" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text19}"
                    Header="Text19" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text20}"
                    Header="Text20" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text21}"
                    Header="Text21" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text22}"
                    Header="Text22" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text23}"
                    Header="Text23" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text24}"
                    Header="Text24" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text25}"
                    Header="Text25" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text26}"
                    Header="Text26" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text27}"
                    Header="Text27" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text28}"
                    Header="Text28" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text29}"
                    Header="Text29" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text30}"
                    Header="Text30" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Text31}"
                    Header="Text31" />
